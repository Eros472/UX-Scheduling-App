<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javafx_final.SettingsController">
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 40;">
            <Label text="Settings" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <CheckBox text="Voice Assist" />
            <Button text="Language/Region >" />
            <Button text="Time Zone >" />
            <CheckBox text="Notifications" />
            <CheckBox text="Color Blind Mode" />

            <HBox spacing="15" alignment="CENTER">
                <Button text="Cancel" onAction="#handleCancel" />
                <Button text="Save" onAction="#handleSave" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
